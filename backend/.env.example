# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
# Choose provider: postgresql, supabase, planetscale, neon, railway, generic
DB_PROVIDER=postgresql

# For PostgreSQL (local or hosted)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=process_pilot
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=false

# Alternative: Use DATABASE_URL for BaaS providers (Supabase, PlanetScale, etc.)
# DATABASE_URL=postgresql://user:password@host:port/database

# Connection pool settings (optional)
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT Configuration - MUST BE CHANGED IN PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-token-secret-key-minimum-32-characters-long
JWT_REFRESH_EXPIRES_IN=7d

# Session Secret for CSRF Protection - MUST BE CHANGED IN PRODUCTION  
SESSION_SECRET=your-session-secret-key-minimum-32-characters-long

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@processpilot.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
# Development: single origin or comma-separated list
CORS_ORIGIN=http://localhost:3000
# Production example: https://yourdomain.com,https://www.yourdomain.com
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Cache Configuration (Future)
REDIS_URL=redis://localhost:6379

# External API Keys (Future integrations)
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=