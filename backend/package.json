{
  "name": "process-pilot-backend",
  "version": "1.0.0",
  "description": "ProcessPilot - Workflow & Approval Engine Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:unit": "cross-env NODE_ENV=test jest tests/models tests/middleware --coverage",
    "test:integration": "cross-env NODE_ENV=test jest tests/routes --coverage",
    "test:security": "cross-env NODE_ENV=test JWT_SECRET=test_secret_key_12345678901234567890 JWT_REFRESH_SECRET=test_refresh_secret_key_12345678901234567890 SESSION_SECRET=test_session_secret_key_12345678901234567890 jest tests/security --coverage",
    "test:security:watch": "cross-env NODE_ENV=test JWT_SECRET=test_secret_key_12345678901234567890 JWT_REFRESH_SECRET=test_refresh_secret_key_12345678901234567890 SESSION_SECRET=test_session_secret_key_12345678901234567890 jest tests/security --watch",
    "test:auth": "cross-env NODE_ENV=test JWT_SECRET=test_secret_key_12345678901234567890 JWT_REFRESH_SECRET=test_refresh_secret_key_12345678901234567890 SESSION_SECRET=test_session_secret_key_12345678901234567890 jest --grep=\"auth|authentication|security\"",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage --watchAll=false",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "db:reset": "npm run db:rollback && npm run db:migrate && npm run db:seed",
    "docs:generate": "swagger-jsdoc -d swaggerDef.js src/routes/*.js -o docs/swagger.json",
    "docs:serve": "swagger-ui-serve docs/swagger.json",
    "setup": "node setup.js",
    "setup:supabase": "npm install @supabase/supabase-js && npm run db:migrate && npm run db:seed",
    "setup:planetscale": "npm install mysql2 && npm run db:migrate && npm run db:seed",
    "db:check": "node src/scripts/check-db-compatibility.js"
  },
  "dependencies": {
    "@fastify/csrf-protection": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "workflow",
    "approval",
    "business-process",
    "nodejs",
    "express",
    "postgresql",
    "supabase",
    "planetscale",
    "neon",
    "railway",
    "baas"
  ],
  "optionalDependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "mysql2": "^3.6.5"
  },
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/portfolio-process-pilot.git"
  }
}
